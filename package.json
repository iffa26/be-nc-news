{
  "name": "be-nc-news",
  "version": "1.0.0",
  "description": "bc-nc-news",
  "main": "index.js",
  "scripts": {
    "setup-dbs": "psql -f ./db/setup.sql",
    "show-tables-dev": "psql -f ./db/show-tables.sql > ./db/show-tables-dev.txt",
    "show-tables-test": "psql -f ./db/show-tables-test.sql > ./db/show-tables-test.txt",
    "migrate-make": "knex migrate:make",
    "migrate-latest": "knex migrate:latest",
    "migrate-rollback": "knex migrate:rollback",
    "seed-dev": "npm run setup-dbs && NODE_ENV=development knex seed:run",
    "seed-test": "npm run setup-dbs && NODE_ENV=test knex seed:run",
    "test-utils": "mocha spec/utils.spec.js",
    "test": "mocha spec/app.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northcoders/be-nc-news.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/northcoders/be-nc-news/issues"
  },
  "homepage": "https://github.com/northcoders/be-nc-news#readme",
  "dependencies": {
    "knex": "^0.20.7",
    "pg": "^7.17.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-sorted": "^0.2.0",
    "mocha": "^7.0.0",
    "supertest": "^4.0.2"
  }
}
